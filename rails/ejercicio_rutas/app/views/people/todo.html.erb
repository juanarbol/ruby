<h1>Todas las personas</h1>

<table>
	<thead>
		<tr>
			<th>Nombre</th>
			<th colspan="3">Acciones</th>
		</tr>
	</thead>
	<tbody>
			<% @todo.each do |p|%>
				<tr>
					<td>
						<%= p.name %>
					</td>
					<td><%= link_to 'Mostrar residentes',  apartment_people_path(p) %></td>
        			<td><%= link_to 'Edit', new_apartment_person_path(p) %></td>
        			<td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
	</tbody>
</table>