<h1>Nueva persona</h1>
<%= link_to "Ir a root", root_path %>
<%= form_for @person do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :document %>
	<%= f.text_field :document %>
	<%= f.label :apartment_id %>
	<%= f.select :apartment_id, Apartment.all.collect{|u| [u.name,u.id]} %>
	<%= f.submit %>
<% end %>	